<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Blog Posts</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h1 class="text-center">All Blog Posts</h1>
          <p class="text-center">Here are all the blog posts:</p>

          <ul class="list-group mt-4">
            <% posts.forEach(function(post) { %>
            <li class="list-group-item">
              <h2><a href="/<%= post._id %>"><%= post.title %></h2></a>
              <h4>Status</h4>
              <p><%= post.status %></p>
              <h4>Description</h4>
              <p><%= post.description %></p>
              <h4>Essay</h4>
              <p><%= post.essay %></p>
              <h4>Links</h4>
              <ul>
                <% post.links.forEach(link => { %>
                    <li>
                      <a href="<%= link.linkUrl %>"><%= link.linkTitle %></a>: <%= link.commentary %> <br>
                    </li>
                <% }) %>
            </ul>
              <h4>Personal</h4>
              <p><%= post.personal %></p>
              <h4>Social Media</h4>
              <p><%= post.socialmedia %></p>
              <h4>Promo</h4>
              <p><%= post.promo %></p>
              <small class="text-muted">Author: <%= post.author %></small>
            </li>
            <% }) %>
          </ul>

          <p class="text-center mt-4">
            <a href="/" class="btn btn-secondary">Go Back to Home</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>